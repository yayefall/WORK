<form method="post" action="{{ path('chambre_delete', {'id': chambre.id}) }}" onsubmit="return confirm('Etes vous sure de vouloir supprimer?');">
    <input type="hidden" name="_method" value="Supprimer">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}"><hr>
    <button class="btn btn-success">Supprimer</button>
</form>
